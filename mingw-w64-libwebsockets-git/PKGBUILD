# Maintainer: Martell Malone <martell malone at g mail dot com >

_realname=libwebsockets
_mingw_suff=mingw-w64-${CARCH}
pkgname="${_mingw_suff}-${_realname}-git"
_ver_base=1.23
pkgver=1.23.754.555c512
pkgrel=1
pkgdesc="A lightweight pure C library for websockets (mingw-w64)"
arch=('any')
license=('LGPL 2.1 - custom')
depends=()
#depends=("${_mingw_suff}-boost" "${_mingw_suff}-crt" "${_mingw_suff}-zlib")
makedepends=("${_mingw_suff}-cmake" "${_mingw_suff}-gcc" 'unzip')
provides=("${_mingw_suff}-${_realname}")
conflicts=("${_mingw_suff}-${_realname}")
url=('http://libwebsockets.org/')
source=("${_realname}"::"git+http://github.com/martell/libwebsockets.git")
options=(!strip !buildflags staticlibs)
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/$_realname"
  printf "%s.%s.%s" "$_ver_base" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
	mkdir -p ${pkgdir}${MINGW_PREFIX}
	pushd ${pkgdir}${MINGW_PREFIX} > /dev/null
	export PREFIX_WIN=`pwd -W`
	popd > /dev/null
	
	pushd ${MINGW_PREFIX} > /dev/null
	export PREFIX_DEPS=`pwd -W`
	popd > /dev/null

    cd "${srcdir}/${_realname}"
    ${MINGW_PREFIX}/bin/cmake.exe \
	  -G"MSYS Makefiles" \
	  -DUSE_EXTERNAL_ZLIB=ON \
	  -DWITH_SSL=OFF \
	  -DWITHOUT_DAEMONIZE=ON \
	  -DCMAKE_INSTALL_PREFIX:PATH=${PREFIX_WIN} \
	  -DCMAKE_BUILD_TYPE=RELEASE
    make
}

package() {
    cd "${srcdir}/${_realname}"
    make -j1 install
	mkdir -p ${pkgdir}${MINGW_PREFIX}/bin
	install -Dm644 "${srcdir}/${_realname}/LICENSE" "${pkgdir}${MINGW_PREFIX}/share/licenses/${pkgname}/LICENSE"
}
