# Maintainer: Alexey Pavlov <alexpux@gmail.com>

_realname=lzo2

pkgname="${MINGW_PACKAGE_PREFIX}-${_realname}"
pkgver=2.07
pkgrel=1
pkgdesc="Portable lossless data compression library (mingw-w64)"
arch=(any)
url="http://www.oberhumer.com/opensource/lzo"
license=("GPL")
makedepends=("${MINGW_PACKAGE_PREFIX}-gcc")
options=('staticlibs' 'strip')
source=("$url/download/lzo-${pkgver}.tar.gz"
        configure-2.07.patch)
md5sums=('4011935e95171e78ad4894f7335c982a'
         'db3ead3fb5590275838d3080ea7342d1')

prepare() {
  cd "${srcdir}/lzo-${pkgver}"
  patch -p0 -i ${srcdir}/configure-2.07.patch
}

build() {
  mkdir -p ${srcdir}/build-${CARCH} && cd ${srcdir}/build-${CARCH}
  ../lzo-${pkgver}/configure \
    --prefix=${MINGW_PREFIX} \
    --host=${MINGW_CHOST} \
    --build=${MINGW_CHOST} \
    --target=${MINGW_CHOST} \
    --enable-static \
    --enable-shared
  make
}

package() {
  cd "${srcdir}/build-${CARCH}"
  make DESTDIR="$pkgdir" install
}
