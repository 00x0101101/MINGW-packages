# Maintainer: Alexey Pavlov <alexpux@gmail.com>

_realname=openmpi
_mingw_suff=mingw-w64-${CARCH}
pkgname="${_mingw_suff}-${_realname}"
pkgver=1.6.5
pkgrel=1
pkgdesc="High performance message passing library (MPI) (mingw-w64)"
arch=('any')
url="http://www.open-mpi.org/"
license=("custom")
makedepends=("${_mingw_suff}-gcc" "${_mingw_suff}-pkg-config" "${_mingw_suff}-cmake")
depends=("${_mingw_suff}-crt")
options=('staticlibs' 'strip' 'buildflags')
source=(http://www.open-mpi.org/software/ompi/v1.6/downloads/${_realname}-${pkgver}.tar.bz2)
md5sums=('03aed2a4aa4d0b27196962a2a65fc475')

prepare() {
	cd "${srcdir}/${_realname}-${pkgver}"
}

build() {
	mkdir -p ${pkgdir}${MINGW_PREFIX}
	pushd ${pkgdir}${MINGW_PREFIX} > /dev/null
	export PREFIX_WIN=`pwd -W`
	popd > /dev/null

	pushd ${MINGW_PREFIX} > /dev/null
	export PREFIX_DEPS=`pwd -W`
	popd > /dev/null
	
	cd "${srcdir}/${_realname}-${pkgver}"

	${MINGW_PREFIX}/bin/cmake.exe \
		-G"MSYS Makefiles" \
		-DCMAKE_INSTALL_PREFIX:PATH=${PREFIX_WIN}

	make
}

package() {
	cd "${srcdir}/${_realname}-${pkgver}"
	make -j1 install
	mkdir -p ${pkgdir}${MINGW_PREFIX}/bin
	mv ${pkgdir}${MINGW_PREFIX}/lib/*.dll ${pkgdir}${MINGW_PREFIX}/bin/
}
