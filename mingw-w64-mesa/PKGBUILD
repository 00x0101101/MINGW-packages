# Maintainer: Alexey Pavlov <alexpux@gmail.com>

_realname=Mesa
_mingw_suff=mingw-w64-${CARCH}
pkgname="${_mingw_suff}-${_realname}"
pkgver=10.0.0
pkgrel=1
pkgdesc="Open-source implementation of the OpenGL specification (mingw-w64)"
arch=('any')
depends=("")
makedepends=("${_mingw_suff}-gcc" "scons" "libxml2-python" "python2")
#groups=("${_mingw_suff}")
url="http://www.gnu.org/software/ncurses/"
license=('MIT')
options=('staticlibs' 'strip')
source=(ftp://ftp.freedesktop.org/pub/mesa/10.0/MesaLib-${pkgver}.tar.bz2)
md5sums=('f3fe55d9735bea158bbe97ed9a0da819')
noextract=("MesaLib-${pkgver}.tar.bz2")

case ${MINGW_CHOST} in
  i686*)
    _mach=x86
  ;;
  x86_64*)
    _mach=x86_64
  ;;
esac
  
prepare() {
  cd $startdir/
  [ -d $srcdir/$_realname-$pkgver ] || tar -xjvf MesaLib-${pkgver}.tar.bz2 -C $srcdir
}

build() {
  cd ${srcdir}/Mesa-$pkgver

  LDFLAGS="-static -s" scons build=release platform=windows toolchain=mingw machine=${_mach} libgl-gdi #mesagdi
}

package() {
  cd ${srcdir}/Mesa-$pkgver

  mkdir -p ${pkgdir}${MINGW_PREFIX}/{bin,lib}
  mkdir -p ${pkgdir}${MINGW_PREFIX}/lib/mesa
  local _dll_files=( $(find ${srcdir}/Mesa-$pkgver -type f -name "*.dll") )
  cp -f ${_dll_files[@]} ${pkgdir}${MINGW_PREFIX}/bin/
  local _dlla_files=( $(find ${srcdir}/Mesa-$pkgver -type f -name "*.a") )
  cp -f ${_dlla_files[@]} ${pkgdir}${MINGW_PREFIX}/lib/mesa/
}
