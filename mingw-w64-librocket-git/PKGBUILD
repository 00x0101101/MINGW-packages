# Maintainer: Ray Donnelly <mingw.android@gmail.com>

_realname=librocket

pkgname="${MINGW_PACKAGE_PREFIX}-${_realname}-git"
pkgver=r243.bd47356
pkgrel=1
pkgdesc="The HTML/CSS User Interface Library (mingw-w64)"
arch=('any')
url="http://http://librocket.com/"
license=("MIT")
provides=("${MINGW_PACKAGE_PREFIX}-${_realname}")
conflicts=("${MINGW_PACKAGE_PREFIX}-${_realname}")
depends=("${MINGW_PACKAGE_PREFIX}-freetype"
         "${MINGW_PACKAGE_PREFIX}-python2"
         "${MINGW_PACKAGE_PREFIX}-boost")
makedepends=("${MINGW_PACKAGE_PREFIX}-gcc"
             "${MINGW_PACKAGE_PREFIX}-cmake"
             "make")

options=('staticlibs' 'strip')

source=("${_realname}"::"git+https://github.com/libRocket/libRocket.git"
        "0001-Debugging-cmake.patch")

md5sums=('SKIP'
         '42086f8ce4d937e9f3d640e957fda512')

pkgver() {
  cd "$srcdir/$_realname"
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

prepare() {
  cd "$srcdir/$_realname"
  git am "$srcdir"/0001-Debugging-cmake.patch
}

build() {
  [ -d build-${CARCH} ] && rm -rf build-${CARCH}
  mkdir -p "${srcdir}/build-${CARCH}"
  cd "${srcdir}/build-${CARCH}"

  cmake --debug-output -G"MSYS Makefiles" \
  -DCMAKE_INSTALL_PREFIX="" \ # :PATH=${pkgdir}${MINGW_PREFIX} \
  -DCMAKE_INSTALL_LIBDIR=lib \
  -DBUILD_PYTHON_BINDINGS=OFF \
  -DBUILD_STATIC_LIBS=ON \
  -DBUILD_SHARED_LIBS=ON \
  -DPYTHON_EXECUTABLE=${MINGW_PREFIX}/bin/python2.exe \
  -DBUILD_SAMPLES=ON \
  -DCMAKE_GNUtoMS=0 \
  ../$_realname/Build
  make -j4
}

package() {
  cd "${srcdir}/build-${CARCH}"
  make install DESTDIR=$pkgdir${MINGW_PREFIX}
}
