# Maintainer: Martell Malone <martell malone at g mail dot com>

_realname=chipmunk

pkgname="${MINGW_PACKAGE_PREFIX}-${_realname}"
pkgver=6.2.1
pkgrel=1
pkgdesc="A high-performance 2D rigid body physics library (${_target})"
arch=('any')
url="http://chipmunk-physics.net/"
license=('MIT')
makedepends=("${MINGW_PACKAGE_PREFIX}-gcc" "${MINGW_PACKAGE_PREFIX}-cmake")
source=(http://files.slembcke.net/chipmunk/release/Chipmunk-6.x/Chipmunk-${pkgver}.tgz)
md5sums=('SKIP')
options=(!buildflags !strip !makeflags)

build() {

  mkdir -p "${srcdir}/build-${CARCH}"
  cd "${srcdir}/build-${CARCH}"
  #unset LDFLAGS CFLAGS CXXFLAGS
  
  cmake -G"MSYS Makefiles" \
  -DCMAKE_BUILD_TYPE=Release \
  -DCMAKE_INSTALL_PREFIX="${pkgdir}${MINGW_PREFIX}" \
  -DBUILD_DEMOS=OFF \
  -DBUILD_SHARED=OFF \
  -DINSTALL_STATIC=ON \
    ../Chipmunk-$pkgver
  make
}

package() {
  cd "${srcdir}/build-${CARCH}"
  make install

# mkdir -p "${pkgdir}${MINGW_PREFIX}/bin"
# mv "${pkgdir}${MINGW_PREFIX}/lib/libchipmunk.dll" "${pkgdir}${MINGW_PREFIX}/bin"
}
