# Maintainer: Alexey Pavlov <alexpux@gmail.com>

_realname=qtbinpatcher
pkgname="${MINGW_PACKAGE_PREFIX}-${_realname}"
pkgver=2.0.0
pkgrel=2
pkgdesc="Patcher for Qt libraries (mingw-w64)"
arch=('any')
url="http://tver-soft.org"
license=("GPL")
makedepends=("${MINGW_PACKAGE_PREFIX}-gcc" "${MINGW_PACKAGE_PREFIX}-cmake")
options=('staticlibs' 'strip')
source=(
        "http://tver-soft.org/.files/QtBinPatcher/2.0.0/qtbinpatcher-2.0.0-src.zip"
        #"http://sourceforge.net/projects/qtx64/files/external-binaries/qtbinpatcher/qtbinpatcher-2.0.0-src.zip"
        qtbinpatcher-2.0-mingw-native-separator.patch
        qtbinpatcher-2.0-custom-layout.patch
        qtbinpatcher-2.0-cmake-install.patch)
md5sums=('242eb86514b51abb652d726d64ae9741'
         '32e28f62008be16ceb4a756679bf1bcd'
         '7766d6c6ed8388bebc7b08c89a4e349d'
         '3199d3a6daf2c20d7181620ca74c8b8b')

prepare() {
  cd ${srcdir}
  patch -p1 -i ${srcdir}/qtbinpatcher-2.0-mingw-native-separator.patch
  patch -p1 -i ${srcdir}/qtbinpatcher-2.0-custom-layout.patch
  patch -p1 -i ${srcdir}/qtbinpatcher-2.0-cmake-install.patch
}

build() {
  [[ -d ${srcdir}/build-${MINGW_CHOST} ]] && rm -rf ${srcdir}/build-${MINGW_CHOST}
  mkdir -p ${srcdir}/build-${MINGW_CHOST}
  cd ${srcdir}/build-${MINGW_CHOST}
  
  ${MINGW_PREFIX}/bin/cmake \
    -G"MSYS Makefiles" \
    -DCMAKE_INSTALL_PREFIX=${pkgdir}${MINGW_PREFIX} \
    -DCMAKE_BUILD_TYPE=Release \
    ../
  make
}

package() {
  cd ${srcdir}/build-${MINGW_CHOST}

  make install
}
