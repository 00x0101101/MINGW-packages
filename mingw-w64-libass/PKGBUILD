# Maintainer: Alexey Pavlov <alexpux@gmail.com>

_realname=libass
_mingw_suff=mingw-w64-${CARCH}
pkgname="${_mingw_suff}-${_realname}"
pkgver=0.10.2
pkgrel=1
pkgdesc="A portable library for SSA/ASS subtitles rendering (mingw-w64)"
arch=('any')
url="http://code.google.com/p/libass/"
license=("BSD")
makedepends=("${_mingw_suff}-gcc" "${_mingw_suff}-pkg-config")
depends=("${_mingw_suff}-crt" "${_mingw_suff}-fribidi" "${_mingw_suff}-fontconfig" "${_mingw_suff}-freetype" "${_mingw_suff}-harfbuzz")
options=('strip' 'staticlibs')
source=("http://libass.googlecode.com/files/${_realname}-${pkgver}.tar.xz")
md5sums=('ce672ed5629c9708b3401b976f516744')

prepare() {
	cd "${srcdir}/${_realname}-${pkgver}"
}

build() {
	mkdir -p "${srcdir}/build-${MINGW_CHOST}"
	cd "${srcdir}/build-${MINGW_CHOST}"
    ../${_realname}-${pkgver}/configure \
		--prefix=${MINGW_PREFIX} \
		--build=${MINGW_CHOST} \
		--host=${MINGW_CHOST} \
		--target=${MINGW_CHOST} \
		--enable-shared \
		--enable-harfbuzz \
		--enable-fontconfig
    make
}

package() {
    cd "${srcdir}/build-${MINGW_CHOST}"
	make DESTDIR="${pkgdir}" install

	# Install license
	#install -m644 ${srcdir}/${_realname}-${pkgver}/COPYING ${pkgdir}${MINGW_PREFIX}/share/licenses/${_realname}/LICENSE
}
