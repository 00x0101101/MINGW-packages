# Contributor: Martell Malone <martell malone at gmail dot com>

_realname=libwebp
_mingw_suff=mingw-w64-${CARCH}
pkgname="${_mingw_suff}-${_realname}"
pkgver=0.3.1
pkgrel=1
pkgdesc="the WebP library. Includes conversion tools. (mingw-w64)"
arch=('any')
url="http://code.google.com/intl/en/speed/webp/"
license=('BSD')
depends=("${_mingw_suff}-libpng" "${_mingw_suff}-libjpeg-turbo" "${_mingw_suff}-libtiff")
makedepends=()
optdepends=()
conflicts=()
source=(http://webp.googlecode.com/files/$_realname-$pkgver.tar.gz)
sha1sums=('52e3d2b6c0b80319baa33b8ebed89618769d9dd8')

build() {
  cd "$srcdir/$_realname-$pkgver"
  ./configure \
  --build=${MINGW_CHOST} \
  --host=${MINGW_CHOST} \
  --target=${MINGW_CHOST} \
  --prefix=${MINGW_PREFIX} \
  --enable-static
  make
}

package() {
  cd "$srcdir/$_realname-$pkgver"
  make install DESTDIR="${pkgdir}"
}
