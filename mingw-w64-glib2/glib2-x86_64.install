post_install() {
	pushd mingw64 > /dev/null
	local _prefix=$(pwd -W)
	popd > /dev/null
	local _it
	for _it in gio gio-windows glib gmodule gmodule-export gmodule-no-export gobject gthread; do
		sed -e "s|/mingw64|${_prefix}|g" -i mingw64/lib/pkgconfig/${_it}-2.0.pc
	done
}

post_upgrade() {
	post_install
}
