post_install() {
  local ff=mingw32
  pushd ${ff} > /dev/null
  local _prefix=$(pwd -W)
  popd > /dev/null
  local _it
  for _it in rst2html rst2man rst2pseudoxml rst2xml rst2s5 rst2odt rst2xetex rst2latex rst2odt_prepstyles rstpep2html; do
    sed -e "s|/${ff}|${_prefix}|g" \
      -i ${ff}/bin/${_it}.py \
      -i ${ff}/bin/${_it}
  done
}

post_upgrade() {
  post_install
}
