# Contributor: Runar Tenfjord < runar dot tenfjord at gmail dot com >

_pkgname=cython
pkgname=("${MINGW_PACKAGE_PREFIX}-cython" "${MINGW_PACKAGE_PREFIX}-cython2")
pkgver=0.21
pkgrel=2
pkgdesc="C-Extensions for Python "
arch=(x86_64)
groups=("${MINGW_PACKAGE_PREFIX}")
url="http://www.cython.org"
license=('APACHE')
makedepends=(
  "${MINGW_PACKAGE_PREFIX}-python3-setuptools"
  "${MINGW_PACKAGE_PREFIX}-python2-setuptools"
  "${MINGW_PACKAGE_PREFIX}-gcc"
)
source=("http://cython.org/release/Cython-$pkgver.tar.gz")
md5sums=('6c9c4d19ba485fe8cd88e23b57ac7886')

prepare() {  
  cp -a $_pkgname-$pkgver $_pkgname-py2-$pkgver
}

package_cython() {
  depends=(
        "${MINGW_PACKAGE_PREFIX}-python3-setuptools"
  )
  cd $_pkgname-$pkgver
  MSYS2_ARG_CONV_EXCL="--prefix=;--install-scripts=;--install-platlib=" \
  ${MINGW_PREFIX}/bin/python3 setup.py install --prefix=${MINGW_PREFIX} \
                                       --root="${pkgdir}" --optimize=1
}

package_cython2() {
  depends=(
        "${MINGW_PACKAGE_PREFIX}-python2-setuptools"
  )
  cd $_pkgname-py2-$pkgver
  MSYS2_ARG_CONV_EXCL="--prefix=;--install-scripts=;--install-platlib=" \
  ${MINGW_PREFIX}/bin/python3 setup.py install --prefix=${MINGW_PREFIX} \
                                       --root="${pkgdir}" --optimize=1
  
  sed -i 's|#!.*python3|#!/usr/bin/python2|' ${pkgdir}/${MINGW_PREFIX}/bin/*.py
  
  mv $pkgdir/${MINGW_PREFIX}/bin/cygdb.exe $pkgdir/${MINGW_PREFIX}/bin/cygdb2.exe
  mv $pkgdir/${MINGW_PREFIX}/bin/cython.exe $pkgdir/${MINGW_PREFIX}/bin/cython2.exe
  mv $pkgdir/${MINGW_PREFIX}/bin/cythonize.exe $pkgdir/${MINGW_PREFIX}/bin/cythonize2.exe
}

package_mingw-w64-i686-cython() {
  package_cython
}

package_mingw-w64-i686-cython2() {
  package_cython2
}

package_mingw-w64-x86_64-cython() {
  package_cython
}

package_mingw-w64-x86_64-cython2() {
  package_cython2
}

